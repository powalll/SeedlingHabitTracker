<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
        <ImageView
            android:id="@+id/streakImage"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/streakTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/streakImage"
            android:text="title"
            android:textSize="20sp"
            android:layout_toRightOf="@id/streakImage" />

        <TextView
            android:id="@+id/streakLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/streakTitle"
            android:layout_toEndOf="@id/streakImage"
            android:text="streak length"
            android:layout_toRightOf="@id/streakImage" />

        <ImageView
            android:id="@+id/streakDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_whatshot_24"
            android:id="@+id/streakCountImage" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/streakCountImage"
            android:layout_toEndOf="@id/streakCountImage"
            android:text="1"
            android:textSize="40sp"
            android:textColor="@android:color/holo_orange_dark"
            android:id="@+id/streakCount"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>